<div class="row" style="margin-top:25px;">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="raised">
    
      <h1>Вход в личный кабинет</h1>

      <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email, "Электронная почта (email)" %>
        <%= f.text_field :email %>

        <%= f.label :password, "Пароль" %>
        <%= f.password_field :password %>

        <p style="text-align:center;"><%= f.submit "Войти", class: "btn btn-large btn-primary", style: "width:50%" %></p>

      <% end %>

      <p><%= link_to "Регистрация пациента", signup_path %></p>
     
    </div>
  </div>
</div>