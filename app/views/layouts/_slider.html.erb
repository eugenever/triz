    <div class="item active">
      <div class="container">
        <div class="carousel-caption" id="cap1">
          <div class='inner-item'>
            <%= link_to image_tag("g10.png", width: "100%"), '#' %>
          </div>
          <p><a class="btn btn-lg btn-danger" href="#" role="button">Подробнее</a></p>
        </div>
      </div>
    </div>
    <div class="item">
      <div class="container">
        <div class="carousel-caption" id="cap2">
