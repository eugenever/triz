<div class="row" style="margin-top:25px;">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="raised">
      <h1>Перечень пациентов</h1>
      <%= will_paginate %>
      <ul class="users">
        <% @users.each do |user| %>
          <li>
            <%= link_to user.name, user %>
            <% if current_user.admin? && !current_user?(user) %>
              <p><%= link_to "Удалить пациента", user, method: :delete, data: { confirm: "Вы уверены?" } %></p>
            <% end %>
          </li>
        <% end %>
      </ul>
      <%= will_paginate %>
    </div>
  </div>
</div>