<div class="row" style="margin-top:25px;">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="raised">
    <h1>Редактирование данных пациента</h1>
    
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Логин" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Электронная почта (email)" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтвердите пароль" %>
      <%= f.password_field :password_confirmation %>

      <p style="text-align:center;"><%= f.submit "Сохранить изменения", class: "btn btn-large btn-primary", style: "width:50%" %></p>
    <% end %>
     
    </div>
  </div>
</div>